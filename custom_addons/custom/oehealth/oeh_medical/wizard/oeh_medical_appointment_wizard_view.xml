<?xml version="1.0" ?>
<odoo>
        <data>

            <!-- Appointment Create Invoice Wizard -->

            <record model="ir.ui.view" id="view_oeh_medical_appointment_wizard">
                <field name="name">Create Invoice</field>
                <field name="model">oeh.medical.appointment.invoice.wizard</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string='Confirmation'>
                        <group>
                            <field name="name" required="1" widget="radio"/>
                        </group>
                        <footer>
                            <button name="create_invoice" string="Generate" type="object"
                                class="btn-primary"/>
                            <button string="Cancel" class="btn-default" special="cancel"/>
                        </footer>
                    </form>
                </field>
            </record>

        </data>
</odoo>