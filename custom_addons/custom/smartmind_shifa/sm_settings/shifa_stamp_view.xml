<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_company_stamp" model="ir.ui.view">
        <field name="name">res.config.company.stamp</field>
        <field name="model">res.company</field>
        <field name="priority" eval="26"/>
        <field name="inherit_id" ref="social_media.view_company_form_inherit_social_media"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="after">
                <group>
                    <field name="stamp" widget="image"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
