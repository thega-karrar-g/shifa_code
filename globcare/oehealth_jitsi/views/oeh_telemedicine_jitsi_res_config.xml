<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="telemedicine_screen_form_jitsi" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="oehealth.res_config_settings_view_form_oehealth"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='oeh_inventory_setting_container']" position="after">
                    <h2>Jitsi Meeting Credentials</h2>
                    <div class="row mt16 o_settings_container">
                        <group class="ml-4">
                            <field name="server_url"/>
                        </group>
                    </div>
                </xpath>
            </field>
        </record>


    </data>
</odoo>